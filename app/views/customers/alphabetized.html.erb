<section class="section">
    <h1 class="title">All Customers (Alphabetized)</h1>
    <div class="buttons mb-4">
        <%= link_to 'All Customers', root_path, class: "button is-link" %>
        <%= link_to 'Alphabetized', alphabetized_customers_path, class: "button is-primary" %>
        <%= link_to 'Missing Email', missing_email_customers_path, class: "button is-warning" %>
    </div>

    <div class="columns is-multiline is-desktop">
        <% @customers.each do |customer| %>
        <div class="column is-one-quarter">
            <%= render partial: 'customer', locals: { customer: customer } %>
        </div>
        <% end %>
    </div>
</section>
