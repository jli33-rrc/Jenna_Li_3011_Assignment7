<div class="box">
    <div class="columns is-vcentered">
        <div class="column is-one-quarter">
            <% if customer.image.attached? %>
                <%= image_tag customer.image.variant(resize_to_limit: [150, 150]), class: "image is-128x128" %>
            <% else %>
                <%= image_tag "bubble.png", class: "image is-128x128", alt: "No image available" %>
            <% end %>
        </div>

        <div class="column">
            <h2 class="title is-4"><%= customer.full_name %></h2>
            <p><strong>Phone:</strong> <%= customer.phone_number.presence || "N/A" %></p>
            <p><strong>Email:</strong> <%= customer.email_address.presence || "N/A" %></p>
            <p><strong>Notes:</strong> <%= customer.notes.presence || "No notes provided" %></p>
        </div>
    </div>
</div>
